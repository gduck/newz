    "columnHeight": ".grid-sizer",
    // "gutter": ".gutter-sizer",
    isInitLayout: false
  });

  $scope.imgLoadedEvents = {
    always: function(instance) {
      // console.log("images all loaded");
      $timeout(function(){
        $scope.repack();
      }, 1500)
